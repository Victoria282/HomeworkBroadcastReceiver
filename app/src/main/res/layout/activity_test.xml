<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".TestActivity"
    android:layout_height="match_parent">

    <TextView
        style="@style/textViewStyle"
        android:textStyle="bold"
        android:padding="20dp"
        android:id="@+id/textView2"
         android:text="Приступим? 😈"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/currentTime"
        style="@style/textViewStyle"
        android:layout_marginTop="8dp"
        android:text="00:00"
        android:textColor="#089CFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.116"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:ignore="MissingConstraints">

        <RadioButton
            android:id="@+id/first"
            android:text=" true TRUE; false FALSE"
            style="@style/radioBtn"
            tools:layout_editor_absoluteX="49dp"
            tools:layout_editor_absoluteY="232dp" />

        <RadioButton
            android:id="@+id/second"
            style="@style/radioBtn"
            android:text=" true TRUE; false TRUE"
            tools:layout_editor_absoluteX="49dp"
            tools:layout_editor_absoluteY="232dp" />

        <RadioButton
            android:id="@+id/third"
            style="@style/radioBtn"
            android:text="true FALSE; false FALSE"
           tools:layout_editor_absoluteX="49dp"
            tools:layout_editor_absoluteY="232dp" />

        <RadioButton
            android:id="@+id/fourth"
            android:text=" Ничто из перечисленного"
            style="@style/radioBtn"
            tools:layout_editor_absoluteX="49dp"
            tools:layout_editor_absoluteY="232dp" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/task2"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentTime"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button_finish"
        style="@style/btn"
        android:layout_marginBottom="28dp"
        android:text="Завершить"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>